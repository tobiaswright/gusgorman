---
export interface Props {
	name?: string;
  alias?: string;
  title: string;
  media: string;
  actor: string;
  id: string; 
  imageSrc?: string;
  charName?: string;
}

const { name, title, media, actor, charName, imageSrc } = Astro.props;
---

<img class="w-auto" src={imageSrc} id={charName} />
<h3 class="text-lg">{charName} in {title}</h3>
<ul>
  {name && name !== charName && <li class="text-sm">Name: {name}</li>}
  <li class="text-sm">Media: {media}</li>
  <li class="text-sm">Portrayed by: {actor}</li>
</ul>
